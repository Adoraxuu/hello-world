<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div class="form-group">
      <%= form.label :cover, t('cover') %>
      <%= form.file_field :cover, class: 'input-field' %>
    </div>
    <div class="form-group">
      <%= form.label :title, t('title') %>
      <%= form.text_field :title, class: "form-control", placeholder: t('title') %>
    </div>

    <div class="form-group">
      <%= form.label :isbn%>
      <%= form.text_field :isbn, class: "form-control", placeholder: t('placeholders.enter_isbn') %>
    </div>

    <div class="form-group">
      <%= form.label :content, t('content')  %>
      <%= form.text_area :content, class: "form-control", placeholder: t('content') %>
    </div>

    <div class="form-group">
      <%= form.label :publish_date, t('publish_date')  %>
      <%= form.text_field :publish_date,
                      data: {
                            controller: 'datepicker',
                            },
                      class: 'form-control',
                      placeholder: t('publish_date') %>
    </div>

    <div class="actions">
      <%= form.submit t('submit'), class: "btn btn-primary" %>
    </div>
  </form>
<% end %>
