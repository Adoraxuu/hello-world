<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div class="form-group">
      <%= form.label :cover %>
      <%= form.file_field :cover, class: 'input-field' %>
    </div>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter Title" %>
    </div>

    <div class="form-group">
      <%= form.label :isbn %>
      <%= form.text_field :isbn, class: "form-control", placeholder: "Enter 13 or 10 isbn" %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control", placeholder: "Enter content" %>
    </div>

    <div class="form-group">
      <%= form.label :publish_date %>
      <%= form.text_field :publish_date,
                      data: {
                            controller: 'datepicker',
                            },
                      class: 'form-control',
                      placeholder: "Enter publish day" %>
    </div>

    <div class="actions">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  </form>
<% end %>
