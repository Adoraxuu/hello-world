<p id="notice"><%= notice %></p>

<h2><%= t('books') %></h2>
<table class="table">
  <thead>
    <tr>
      <th><%= t('cover') %></th>
      <th><%= t('title') %></th>
      <th>Isbn</th>
      <th><%= t('publish_date') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book_cover_sm(book) %></td>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.publish_date %></td>
        <td><%= link_to t('show'), book, class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= link_to t('edit'), edit_book_path(book), class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= link_to t('destroy'), book, method: :delete, data: { confirm: t('sure') }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('newbook'), new_book_path, class: 'btn btn-outline-secondary' %>