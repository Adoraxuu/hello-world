<p id="notice"><%= notice %></p>

<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Isbn</th>
      <th>Content</th>
      <th>Publish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book_cover_sm(book) %></td>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.content %></td>
        <td><%= book.publish_date %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-outline-secondary' %>